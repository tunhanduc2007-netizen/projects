/**
 * ============================================
 * FIRESTORE SECURITY RULES
 * CLB B√≥ng B√†n L√™ Qu√Ω ƒê√¥n - Production
 * ============================================
 * 
 * GI·∫¢I TH√çCH CHI TI·∫æT:
 * 
 * 1. request.auth != null 
 *    ‚Üí Ng∆∞·ªùi d√πng ph·∫£i ƒëƒÉng nh·∫≠p
 * 
 * 2. request.auth.token.role == "admin"
 *    ‚Üí Ch·ªâ admin m·ªõi c√≥ quy·ªÅn
 * 
 * 3. request.auth.token.role in ["admin", "staff"]
 *    ‚Üí Admin HO·∫∂C Staff c√≥ quy·ªÅn
 * 
 * 4. request.auth.uid == resource.data.userId
 *    ‚Üí Ch·ªâ owner c·ªßa document
 * 
 * 5. request.resource.data.keys().hasAll([...])
 *    ‚Üí Validate required fields
 * 
 * 6. request.resource.data.field is string
 *    ‚Üí Validate data type
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Ki·ªÉm tra ƒë√£ ƒëƒÉng nh·∫≠p
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Ki·ªÉm tra role
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }
    
    // Ki·ªÉm tra l√† admin
    function isAdmin() {
      return hasRole("admin");
    }
    
    // Ki·ªÉm tra l√† staff ho·∫∑c admin
    function isStaffOrAdmin() {
      return isAuthenticated() && request.auth.token.role in ["admin", "staff"];
    }
    
    // Ki·ªÉm tra owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // üë§ MEMBERS COLLECTION
    // ============================================
    // 
    // READ: Ph·∫£i ƒëƒÉng nh·∫≠p
    // CREATE: Ch·ªâ Admin
    // UPDATE: Ch·ªâ Admin (ho·∫∑c member t·ª± update profile)
    // DELETE: Ch·ªâ Admin
    //
    match /members/{memberId} {
      allow read: if isAuthenticated();
      
      allow create: if isAdmin()
        && request.resource.data.keys().hasAll(['fullName', 'phone', 'email', 'role', 'status'])
        && request.resource.data.fullName is string
        && request.resource.data.phone is string
        && request.resource.data.email is string
        && request.resource.data.role in ['admin', 'staff', 'member']
        && request.resource.data.status in ['active', 'inactive'];
      
      allow update: if isAdmin() 
        || (isOwner(memberId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
        // Member c√≥ th·ªÉ update profile nh∆∞ng KH√îNG ƒë∆∞·ª£c ƒë·ªïi role
      
      allow delete: if isAdmin();
    }

    // ============================================
    // üìÖ SCHEDULES COLLECTION
    // ============================================
    //
    // READ: Ai c≈©ng xem ƒë∆∞·ª£c (public)
    // WRITE: Ch·ªâ Staff ho·∫∑c Admin
    //
    match /schedules/{scheduleId} {
      allow read: if true; // Public - hi·ªÉn th·ªã l·ªãch t·∫≠p tr√™n website
      
      allow create: if isStaffOrAdmin()
        && request.resource.data.keys().hasAll(['dayOfWeek', 'startTime', 'endTime', 'coach'])
        && request.resource.data.dayOfWeek in ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']
        && request.resource.data.startTime is string
        && request.resource.data.endTime is string;
      
      allow update: if isStaffOrAdmin();
      
      allow delete: if isAdmin();
    }

    // ============================================
    // üìû CONTACTS COLLECTION
    // ============================================
    //
    // CREATE: Public (form li√™n h·ªá)
    // READ/UPDATE/DELETE: Ch·ªâ Staff ho·∫∑c Admin
    //
    match /contacts/{contactId} {
      allow create: if true // Public - form li√™n h·ªá
        && request.resource.data.keys().hasAll(['name', 'phone', 'message'])
        && request.resource.data.name is string
        && request.resource.data.name.size() >= 2
        && request.resource.data.phone is string
        && request.resource.data.message is string
        && request.resource.data.message.size() >= 10;
      
      allow read: if isStaffOrAdmin();
      
      allow update: if isStaffOrAdmin();
      
      allow delete: if isAdmin();
    }

    // ============================================
    // üèì PRODUCTS COLLECTION
    // ============================================
    //
    // READ: Public (hi·ªÉn th·ªã s·∫£n ph·∫©m)
    // WRITE: Ch·ªâ Admin
    //
    match /products/{productId} {
      allow read: if true; // Public - xem s·∫£n ph·∫©m
      
      allow create: if isAdmin()
        && request.resource.data.keys().hasAll(['name', 'price', 'stock', 'category'])
        && request.resource.data.name is string
        && request.resource.data.price is number
        && request.resource.data.price >= 0
        && request.resource.data.stock is int
        && request.resource.data.stock >= 0;
      
      allow update: if isStaffOrAdmin();
      
      allow delete: if isAdmin();
    }

    // ============================================
    // üßæ ORDERS COLLECTION
    // ============================================
    //
    // CREATE: Member ƒëƒÉng nh·∫≠p c√≥ th·ªÉ t·∫°o order
    // READ: Owner ho·∫∑c Staff/Admin
    // UPDATE: Staff/Admin (ƒë·ªïi status)
    // DELETE: Ch·ªâ Admin
    //
    match /orders/{orderId} {
      allow create: if isAuthenticated()
        && request.resource.data.keys().hasAll(['userId', 'items', 'totalPrice', 'status'])
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.totalPrice is number
        && request.resource.data.status == 'pending';
      
      allow read: if isStaffOrAdmin() 
        || (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      allow update: if isStaffOrAdmin()
        && request.resource.data.status in ['pending', 'paid', 'canceled'];
      
      allow delete: if isAdmin();
    }

    // ============================================
    // üí≥ PAYMENTS COLLECTION
    // ============================================
    //
    // CREATE: Staff/Admin (sau khi x√°c nh·∫≠n thanh to√°n)
    // READ: Owner c·ªßa order ho·∫∑c Staff/Admin
    // UPDATE: Ch·ªâ Admin
    // DELETE: Kh√¥ng cho ph√©p (audit trail)
    //
    match /payments/{paymentId} {
      allow create: if isStaffOrAdmin()
        && request.resource.data.keys().hasAll(['orderId', 'amount', 'method', 'status'])
        && request.resource.data.amount is number
        && request.resource.data.amount > 0
        && request.resource.data.method in ['cash', 'transfer']
        && request.resource.data.status in ['success', 'failed'];
      
      allow read: if isStaffOrAdmin()
        || (isAuthenticated() && exists(/databases/$(database)/documents/orders/$(resource.data.orderId)) 
            && get(/databases/$(database)/documents/orders/$(resource.data.orderId)).data.userId == request.auth.uid);
      
      allow update: if isAdmin();
      
      allow delete: if false; // KH√îNG BAO GI·ªú x√≥a payment records
    }

    // ============================================
    // üìù LOGS COLLECTION
    // ============================================
    //
    // CREATE: T·ª± ƒë·ªông t·ª´ Cloud Functions/App
    // READ: Ch·ªâ Admin
    // UPDATE/DELETE: KH√îNG CHO PH√âP (immutable audit trail)
    //
    match /logs/{logId} {
      allow create: if isAuthenticated();
      
      allow read: if isAdmin();
      
      allow update: if false; // Logs l√† immutable
      
      allow delete: if false; // KH√îNG BAO GI·ªú x√≥a logs
    }

    // ============================================
    // DEFAULT DENY
    // ============================================
    // T·∫•t c·∫£ collections kh√°c - DENY ALL
    //
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
